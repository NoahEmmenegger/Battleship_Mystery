<Page x:Class="Battleship_Mystery.GUI.Pages.ToolMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Battleship_Mystery.GUI.Pages"
      xmlns:v="clr-namespace:Battleship_Mystery.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="40" d:DesignWidth="800"
      Title="ToolMenu">

    <Page.DataContext>
        <v:ToolMenuViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
            <Button Command="{Binding CorrectCommand}" Margin="3" Height="30" Width="100">Korrigieren</Button>
            <Button Command="{Binding HelpCommand}" Margin="3" Height="30" Width="100">Hilfe</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding SaveVirtualMysteryCommand}" HorizontalAlignment="Left" Margin="3" Height="30" Width="100">Speichern</Button>
            <Button Command="{Binding LoadVirtualMysteryCommand}" HorizontalAlignment="Left" Margin="3" Height="30" Width="100">Laden</Button>
        </StackPanel>

        <StackPanel Grid.Column="1"  Orientation="Horizontal">
            <Button Command="{Binding SafePDFCommand}" HorizontalAlignment="Left" Margin="3" Height="30" Width="100">PDF Speichern</Button>
            <Button Command="{Binding SafePDFSolutionCommand}" HorizontalAlignment="Left" Margin="3" Height="30" Width="130">PDF Lösung Speichern</Button>
        </StackPanel>
    </Grid>
</Page>
